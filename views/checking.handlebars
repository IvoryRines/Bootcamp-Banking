<section class="checking apply-background">
  <h2>Total Checking</h2>
  <div class="checking-account">
    <container>
      <h4 class="balance">Available Balance: $<span
          class="span"
        >{{checking.account_balance}}</span></h4>
      <h4>Account Number: {{checking.account_number}}</h4>
    </container>
    <div class="manage">
      <h4>Manage Account</h4>
      <div class="transfer mb-3">
        <input
          class="transfer-input mb-3"
          placeholder="Enter Amount to Transfer to Savings "
        />
        <button
          class="transfer-btn btn btn-primary"
          type="click"
        >Transfer</button>
      </div>
      <div class="deposit mb-3">
        <input class="deposit-input mb-3" placeholder="Enter Deposit Amount" />
        <button
          class="deposit-btn btn btn-primary"
          type="click"
        >Deposit</button>
      </div>
      <div class="withdraw mb-3">
        <input
          class="withdrawal-input mb-3"
          placeholder="Enter Withdrawal Amount"
        />
        <button
          class="withdrawal-btn btn btn-primary"
          type="click"
        >Withdraw</button>
      </div>
    </div>
    <h4 class="transaction">Last transaction
      <span class="update">{{checking.updatedAt}}</span></h4>
    <h4>Account opened on
      <span class="create">{{checking.createdAt}}</span></h4>
  </div>
</section>

