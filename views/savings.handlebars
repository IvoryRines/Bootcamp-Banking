<h2>Total Savings</h2>

<section class="savings">
  <div class="savings-account">
    <container>
        <h3 class="balance">Available Balance: <span class="span">{{savings.account_balance}}</span></h3>
        <h3>Account Number: {{savings.account_number}}</h3>
    </container>
    <div class="manage">
      <h3>Manage Account</h3>
      <div class="transfer">
        <input class="transfer-input"/>
        <button class="btn btn-primary" type="submit">Transfer</button>
      </div>
      <div class="deposit">
        <input class="deposit-input"/>
        <button class="btn btn-primary" type="submit">Deposit</button>
      </div>
      <div class="withdraw">
        <input class="withdraw-input"/>
        <button class="btn btn-primary" type="submit">Withdraw</button>
      </div>
    </div>
  </div>
</section>

<script src="/js/savings.js"></script>